{
  "name": "pomsui",
  "description": "GUI of the POMS admin",
  "version": "5.11.0",
  "config": {
    "version": "5.11.0",
    "apihost": ""
  },
  "scripts": {
    "prebuild:app:dev": "npm run build:constants && npm run build:templatecache:gulp",
    "build:app:dev": "cp src/index.html build/work/index.html && replace \"{version}\" \"$npm_package_version\" build/work/index.html && replace \"{domain}\" \"$npm_config_apihost\" build/work/index.html",
    "build:app:gulp": "gulp app-deploy",
    "prebuild:selector:dev": "npm run copy:selector:dev",
    "build:selector:dev": "replace \"{version}\" \"$npm_package_version\" build/work/CMSSelector/index.html",
    "prebuild:selector:gulp": "npm run copy:selector",
    "build:selector:gulp": "gulp selector-deploy",
    "build:constants": "node ./create.constants.js",
    "prebuild:styles": "npm run create:deploybase:css && npm run copy:vendorstyles",
    "build:styles": "node-sass ./src/styles/style.scss -o ./build/deploy/css",
    "postbuild:styles": "npm run styles:optimize",
    "prebuild:styles:dev": "npm run create:workbase:css && npm run copy:vendorstyles:dev",
    "build:styles:dev": "node-sass ./src/styles/style.scss -o ./build/work/css",
    "postbuild:styles:dev": "npm run styles:optimize:dev",
    "build:templatecache:gulp": "gulp templates",
    "clean:target": "rimraf target",
    "clean:deploy": "rimraf build/deploy",
    "clean:work": "rimraf build/work",
    "copy:selector": "cp -R src/CMSSelector build/deploy/CMSSelector",
    "postcopy:selector": "replace \"{domain}\" \"$npm_package_config_apihost\" build/deploy/CMSSelector/js/media.js",
    "copy:selector:dev": "cp -R src/CMSSelector build/work/CMSSelector",
    "postcopy:selector:dev": "replace \"{domain}\" \"$npm_package_config_apihost\" build/work/CMSSelector/js/media.js",
    "copy:resources": "cp -Rfa ./src/resources ./build/deploy/resources",
    "copy:vendorstyles": "cp -a ./src/styles/vendor/. ./build/deploy/css",
    "copy:vendorstyles:dev": "cp -a ./src/styles/vendor/. ./build/work/css",
    "create:deploybase": "mkdirp ./build/deploy",
    "create:deploybase:css": "mkdirp ./build/deploy/css",
    "create:workbase": "mkdirp ./build/work",
    "create:workbase:css": "mkdirp ./build/work/css",
    "predeploy:gulp": "npm run clean:target && npm run clean:deploy && npm run create:deploybase",
    "deploy:gulp": "npm run copy:resources && npm run build:styles && npm run build:templatecache:gulp && npm run build:constants && npm run build:app:gulp && npm run build:selector:gulp",
    "predev": "npm run clean:work && npm run create:workbase",
    "dev": "npm run build:styles:dev && npm run build:app:dev && npm run build:selector:dev",
    "livereload": "node ./livereload.js",
    "serve:dev": "parallelshell \"npm run serve -s\" \"npm run watch:styles\" \"npm run watch:app\" \"npm run livereload\"",
    "serve:dev-secure": "parallelshell \"npm run serve:secure -s\" \"npm run watch:styles\" \"npm run watch:app\" \"npm run livereload\"",
    "serve": "node server.dev.js",
    "serve:secure": "node server-secure.dev.js",
    "styles:optimize": "postcss --use autoprefixer ./build/deploy/css/style.css --autoprefixer.browsers \"last 2 versions, ie 9\" --use cssnano  > ./build/deploy/css/poms-$npm_package_version.css",
    "poststyles:optimize": "rimraf ./build/deploy/css/style.css",
    "styles:optimize:dev": "postcss --use autoprefixer ./build/work/css/style.css --autoprefixer.browsers \"last 2 versions, ie 9\" > ./build/work/css/poms-$npm_package_version.css",
    "poststyles:optimize:dev": "rimraf ./build/work/css/style.css",
    "pretest": "npm run build:templatecache:gulp",
    "test": "karma start karma.conf.js",
    "watch:dev": "npm run dev && npm run serve:dev",
    "watch:dev-secure": "npm run dev && npm run serve:dev-secure",
    "watch:app": "nodemon --watch src --ext js,html --ignore src/views/templates.js --ignore src/js/poms/constants.js --exec npm run build:app:dev",
    "watch:styles": "nodemon --watch src/styles --ext scss --exec npm run build:styles:dev"
  },
  "devDependencies": {
    "angular": "~1.3.4",
    "angular-animate": "~1.3.8",
    "angular-clipboard": "~1.1.1",
    "angular-i18n": "~1.3.8",
    "angular-local-storage": "~0.1.5",
    "angular-mocks": "~1.3.4",
    "angular-route": "~1.3.4",
    "angular-sanitize": "~1.3.8",
    "angular-scroll": "~0.6.4",
    "angular-ui-tab-scroll": "~1.2.3",
    "autoprefixer": "~6.1.2",
    "browserslist": "^1.5.2",
    "cssnano": "~3.4.0",
    "debug": "~2.1.0",
    "express": "~4.10.4",
    "gulp": "^3.8.11",
    "gulp-angular-templatecache": "~1.4.2",
    "gulp-header": "1.5.2",
    "gulp-load-plugins": "~0.7.1",
    "gulp-minify-html": "~1.0.4",
    "gulp-ng-annotate": "~1.1.0",
    "gulp-replace": "~0.5.0",
    "gulp-uglify": "~1.0.1",
    "gulp-usemin": "~0.3.8",
    "jasmine": "~2.1.0",
    "jquery": "~2.1.3",
    "karma": "~0.12.28",
    "karma-chrome-launcher": "~0.2",
    "karma-coverage": "~0.2.7",
    "karma-firefox-launcher": "~0.1",
    "karma-jasmine": "~0.3.2",
    "karma-junit-reporter": "~0.2",
    "karma-ng-html2js-preprocessor": "~0.1",
    "karma-phantomjs-launcher": "~0.1.2",
    "livereload": "~0.4.0",
    "lodash": "~3.9.3",
    "mkdirp": "~0.5.1",
    "moment": "^2.18.1",
    "ng-config": "git+https://github.com/tlvince/ng-config.git#1.0.0",
    "ng-file-upload": "~3.0.7",
    "node-sass": "^3.13.1",
    "nodemon": "~1.8.1",
    "npm-html2js": "git+https://github.com/arnauddri/npm-html2js.git",
    "parallelshell": "~2.0.0",
    "phantomjs": "^2.1.7",
    "postcss-cli": "~2.3.2",
    "rename": "~1.0.3",
    "replace": "~0.3.0",
    "rimraf": "~2.4.4",
    "stompjs": "~2.3.3",
    "usemin-cli": "~0.0.7"
  },
  "dependencies": {
    "nvm": "0.0.4"
  }
}
